---
interface Props {
  href: string;
  label: string;
  variant?: "code" | "demo" | "video";
}

const { href, label, variant = "code" } = Astro.props;

const classes = {
  code: "border-slate-700 text-slate-900 dark:text-white",
  demo: "border-[rgb(var(--clr-lime))] text-[rgb(var(--clr-lime))]",
  video: "border-red-700 text-red-700",
}[variant];
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`inline-flex items-center gap-1 rounded-lg px-3 py-1.5 text-xs font-semibold
          transition bg-white/10 hover:bg-white/20 border ${classes}`}
>
  <!-- iconos inline -->
  {
    variant === "code" && (
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path
          fill-rule="evenodd"
          d="M12 2C6.48 2 2 6.48 2 12.02c0 4.42 2.87 8.18 6.84 9.5.5.09.68-.22.68-.49 0-.24-.01-.88-.02-1.71-2.78.61-3.37-1.34-3.37-1.34-.45-1.15-1.11-1.46-1.11-1.46-.91-.62.07-.61.07-.61 1 .07 1.53 1.03 1.53 1.03.89 1.53 2.34 1.09 2.91.83.09-.65.35-1.08.64-1.34-2.22-.25-4.56-1.11-4.56-4.95 0-1.09.39-1.98 1.03-2.69-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.03a9.56 9.56 0 0 1 5 0c1.91-1.3 2.75-1.03 2.75-1.03.55 1.38.21 2.4.1 2.65.64.71 1.03 1.6 1.03 2.69 0 3.85-2.34 4.7-4.57 4.95.36.31.68.92.68 1.86 0 1.34-.01 2.42-.01 2.75 0 .27.18.59.69.49A10.02 10.02 0 0 0 22 12.02C22 6.48 17.52 2 12 2z"
          clip-rule="evenodd"
        />
      </svg>
    )
  }
  {
    variant === "demo" && (
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.5"
          d="M12 21a9 9 0 1 0 0-18 9 9 0 0 0 0 18Z"
        />
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.5"
          d="M12 3a8.994 8.994 0 0 1 7.843 4.582A11.953 11.953 0 0 1 12 10.5c-3 0-5.74-1.1-7.843-2.918A9 9 0 0 1 12 3Z"
        />
      </svg>
    )
  }
  {
    variant === "video" && (
      <svg
        class="w-4 h-4"
        viewBox="0 0 256 180"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M250 28A32 32 0 0 0 228 6C208 0 128 0 128 0S48 0 28 6A32 32 0 0 0 6 28c-6 35-8 89 0 123a32 32 0 0 0 22 23c20 6 100 6 100 6s80 0 100-6a32 32 0 0 0 22-23c6-35 8-89 0-123Z"
          fill="currentColor"
        />
        <path d="m102 128 66-38-66-38z" fill="#FFF" />
      </svg>
    )
  }
  {label}
</a>
