---
const { info } = Astro.props;
---

<!-- Panel informativo al estilo del sitio -->
<div
  class="absolute bottom-8 left-8 hidden flex-col items-start space-y-3 rounded-2xl bg-white/10 p-5 shadow-xl backdrop-blur-md sm:flex dark:bg-black/20"
>
  <!-- Número de proyecto grande con gradiente -->
  <div
    class="bg-[linear-gradient(90deg,rgb(var(--clr-cyan)),rgb(var(--clr-lime)))] bg-clip-text text-5xl font-extrabold text-transparent sm:text-6xl"
  >
    #{info.number}
  </div>

  <!-- Título del proyecto -->
  <h2 class="text-lg font-semibold text-white drop-shadow-md sm:text-2xl">
    {info.title}
  </h2>

  <!-- Enlace para volver a la lista de proyectos -->
  <a
    href="/"
    class="mt-2 inline-block rounded-lg bg-[rgb(var(--clr-cyan))] px-4 py-1 font-medium text-black transition hover:bg-[rgb(var(--clr-cyan))]/80 dark:bg-[rgb(var(--clr-lime))] dark:hover:bg-[rgb(var(--clr-lime))]/80"
  >
    ← Volver a proyectos
  </a>
</div>
